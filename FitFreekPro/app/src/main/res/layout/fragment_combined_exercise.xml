<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CombinedExercise"
    android:background="@drawable/image2"
    android:orientation="vertical">

    <!-- First TextView -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Combined Exercises"
        android:textSize="40dp"
        android:fontFamily="@font/tnr"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_marginTop="40sp"
        android:textColor="#EA2828"
        android:background="#333131"/>

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <!-- TextView inside ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#00FFFFFF"
                android:id="@+id/btn1"
                android:text="Chest Close Pushup"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:fontFamily="@font/tnr"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#80FFFFFF"
                android:id="@+id/btn2"
                android:text="Inclined Pushup"
                android:textSize="35dp"
                android:textStyle="italic"
                android:fontFamily="@font/tnr"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#00FFFFFF"
                android:id="@+id/btn3"
                android:text="Wide Stance Pushup"
                android:textSize="35dp"
                android:textStyle="italic"
                android:fontFamily="@font/tnr"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#80FFFFFF"
                android:id="@+id/btn4"
                android:text="Inward Pushup"
                android:textSize="35dp"
                android:textStyle="italic"
                android:fontFamily="@font/tnr"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#00FFFFFF"
                android:id="@+id/btn5"
                android:text="OutWard Pushup"
                android:textSize="35dp"
                android:textStyle="italic"
                android:fontFamily="@font/tnr"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#80FFFFFF"
                android:id="@+id/btn6"
                android:text="Plie Squats"
                android:textSize="35dp"
                android:textStyle="italic"
                android:fontFamily="@font/tnr"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#00FFFFFF"
                android:id="@+id/btn7"
                android:text="One Leg Squats"
                android:textSize="35dp"
                android:textStyle="italic"
                android:fontFamily="@font/tnr"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#80FFFFFF"
                android:id="@+id/btn8"
                android:text="Goblet Squats"
                android:textSize="35dp"
                android:textStyle="italic"
                android:fontFamily="@font/tnr"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#00FFFFFF"
                android:id="@+id/btn9"
                android:text="Biceps Curls"
                android:textSize="35dp"
                android:textStyle="italic"
                android:fontFamily="@font/tnr"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#80FFFFFF"
                android:id="@+id/btn10"
                android:text="Inclined Dumbbell Curls"
                android:textSize="35dp"
                android:textStyle="italic"
                android:fontFamily="@font/tnr"
                />

        </LinearLayout>
    </ScrollView>

    <!-- Second TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textSize="50dp"
        android:background="#40E10707"
        android:layout_weight="1"
        android:id="@+id/clockTimer"
        android:layout_marginBottom="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>
</LinearLayout>

